<div class="row"></div>
<div class="row">
    <div class="col s12">
        <h1 class="center-align">Welcome to Eat Da Burger!</h1>
    </div>
</div>
<div class="row">
    <div class="col s8 offset-s2">
        <form action="/api/burgers" method="post">
            <h5>Insert a new burger:</h5>
            <input type="text" name="burger" id="burger" placeholder="Smokey Chipotle Burger">
            <input type="submit" value="Submit">
        </form>
    </div>
</div>
<div class="row">
    <div class="col s5 offset-s2">
        <h4>Burgers to Devour</h4>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{>burger devoured=false}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col s5">
        <h4>Devoured Burgers</h4>
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{>burger devoured=true}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>